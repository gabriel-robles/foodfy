{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy</title>
    <link rel="stylesheet" href="/styles/information.css">
{% endblock head %}

{% block content %}
    <main>
        <img src="{{recipe.image}}" alt="imagem de {{recipe.image}}">
        <div class="info">
            <h1>{{recipe.title}}</h1>
            <p>por
                {{recipe.author}}</p>
        </div>

        <div class="ingredients">
            <h3>Ingredientes</h3>
            <button type="button" onclick="onClick1()" id="btn1">Esconder</button>

            <ol id="ingredients">
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ol>
        </div>

        <div class="preparation">
            <h3>Modo de preparo</h3>
            <button type="button" onclick="onClick2()" id="btn2">Esconder</button>

            <ol id="preparation">
                {% for step in recipe.preparation %}
                    <li>{{step}}</li>
                {% endfor %}
            </ol>
        </div>

        <div class="information">
            <h3>Informações adicionais</h3>
            <button type="button" onclick="onClick3()" id="btn3">Esconder</button>
            <div>
                <p id="information">{{recipe.information}}</p>
            </div>
        </div>
    </main>

    <script src="/scripts.js"></script>
{% endblock content %}